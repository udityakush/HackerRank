import java.io.*;
import java.math.*;
import java.security.*;
import java.text.*;
import java.util.*;
import java.util.concurrent.*;
import java.util.regex.*;
import java.util.Scanner;

public class Solution {
    public static void main(String[] args) throws IOException {
     Scanner sc = new Scanner(System.in);
     int n = sc.nextInt();
    int min=0;
    int max=0;
    
int array []= new int[n];
for(int i =0;i<n;i++){
    array[i]=sc.nextInt();
}
int minscore = array[0];
int maxscore= array[0];
int mincount=0;
int maxcount=0;

for(int i=0;i<n-1;i++){
if(array[i+1]<minscore){
    minscore=array[i+1];
    mincount++;
}
if(array[i+1]>maxscore){
    maxscore=array[i+1];
    maxcount++;
}
}
System.out.println(maxcount+" "+mincount);
    }
         }

